{
  "extends": "./config/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "noEmit": false,
  },
  "include": [
    "bin/**/*",
    "cli/**/*",
    "config/**/*",
    "config/.eslintrc.js",
