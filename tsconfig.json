{
  "extends": "./config/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "noEmit": false,
  },
  "include": [
    "bin/**/*",
    "cli/**/*",
    "config/**/*",
    "config/.eslintrc.js",
    "runtime/**/*",
    "shell/**/*",
    "index.ts",
    "index.d.ts",
    "config/tsconfig.json",
    "jest.config.js",
    "babel.config.js",
  ],
  "exclude": [
    "test-app/**/*",
    "dist/**/*",
    "coverage/**/*",
    "cli/coverage",
  ]
}
